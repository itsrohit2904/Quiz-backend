{
  "compilerOptions": {
    "target": "ES6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "module": "commonjs",
    "outDir": "./dist",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": ["node", "express"]  // Make sure express is included here
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
